<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewFon3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageRestart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/restart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageCardBack"
        android:layout_width="85dp"
        android:layout_height="145dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCardFront"
        android:layout_width="85dp"
        android:layout_height="145dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir2"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir3"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir4"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir5"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir6"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir7"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="180dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir8"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBankir9"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="260dp"
        app:layout_constraintBottom_toTopOf="@id/imageCardBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser2"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser3"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser4"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser5"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser6"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser7"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="180dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser8"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <ImageView
        android:id="@+id/imageUser9"
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:layout_marginStart="260dp"
        app:layout_constraintBottom_toTopOf="@id/buttonMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCardBack" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageUser"
        app:layout_constraintBottom_toBottomOf="@id/imageUser" />

    <TextView
        android:id="@+id/textViewBankir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageBankir"
        app:layout_constraintBottom_toBottomOf="@id/imageBankir" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diller"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageBankir" />

    <TextView
        android:id="@id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="40sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_white"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintStart_toStartOf="@id/imageHome"
        app:layout_constraintEnd_toEndOf="@id/imageRestart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMore"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="More"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPass"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPass"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="Pass"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonMore" />

    <TextView
        android:id="@+id/textViewStavka"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/textview_white"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingEnd="10dp"
        android:textAlignment="textEnd"
        android:text="0"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@id/imageCardBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageBankir"
        app:layout_constraintBottom_toTopOf="@id/imageUser"/>

</androidx.constraintlayout.widget.ConstraintLayout>